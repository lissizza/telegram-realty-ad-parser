# === SECRETS (required) ===
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=+374XXXXXXXXX
TELEGRAM_BOT_TOKEN=your_bot_token_here
SECRET_KEY=your-super-secret-key-here

# === DATABASE ===
MONGODB_URL=mongodb://admin:password@mongo:27017/telegram_bot
REDIS_URL=redis://redis:6379

# === CHANNELS ===
DEFAULT_MONITORED_CHANNEL=-1001827102719
FORWARDING_CHANNEL=@your_forwarding_channel
TELEGRAM_MONITORED_CHANNELS=-1001827102719
TELEGRAM_MONITORED_SUBCHANNELS=-1001827102719:2629
TELEGRAM_EXCLUDED_SUBCHANNELS=

# === LLM SETTINGS ===
# Provider options: openai, anthropic, zai, local, mock
ENABLE_LLM_PARSING=true
LLM_PROVIDER=openai
# For Z.AI: set LLM_PROVIDER=zai
# Supported models for GLM Coding Plan: glm-4.6, glm-4.5, glm-4.5-air
# Note: GLM Coding Plan does NOT cover API calls - they are billed separately
# LLM_BASE_URL is optional for Z.AI (defaults to https://api.z.ai/api/paas/v4)
# For Coding Plan API (if available): https://api.z.ai/api/coding/paas/v4
LLM_API_KEY=your_llm_api_key_here
LLM_MODEL=gpt-3.5-turbo
LLM_BASE_URL=
LLM_MAX_TOKENS=1000
LLM_TEMPERATURE=0.1

# === APPLICATION SETTINGS ===
DEBUG=false
LOG_LEVEL=INFO
ACCESS_TOKEN_EXPIRE_MINUTES=30 